---
import type { CoreHeading } from '@/utils/types';

interface Props {
  block: CoreHeading;
}

const { block } = Astro.props;
const level = block.attributes.level || 2;
const content = block.attributes.content || '';

// Create an array of possible heading components
const headings = {
  1: 'h1',
  2: 'h2',
  3: 'h3',
  4: 'h4',
  5: 'h5',
  6: 'h6'
};

// Get the appropriate heading tag
const HeadingTag = headings[level as keyof typeof headings] || 'h2';
---

<div class="max-w-none prose prose-dante sm:prose-lg my-4">
  <HeadingTag
    class="text-2xl sm:text-3xl font-bold my-4"
    set:html={content}
  />
</div>
